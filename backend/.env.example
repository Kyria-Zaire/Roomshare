APP_NAME=Roomshare
APP_ENV=production
APP_KEY=
# ⚠️ IMPORTANT : Générer une nouvelle clé avec : php artisan key:generate
APP_DEBUG=false
APP_URL=http://localhost
# ⚠️ IMPORTANT : Remplacer par l'URL réelle de votre API en production

APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

APP_MAINTENANCE_DRIVER=file

# ─── Database (MongoDB) ────────────────────────────────────
DB_CONNECTION=mongodb
DB_HOST=mongodb
DB_PORT=27017
DB_DATABASE=roomshare
DB_USERNAME=
DB_PASSWORD=

# ─── Logging ─────────────────────────────────────────────
LOG_CHANNEL=stdout
LOG_LEVEL=info
# En production : utiliser 'info' ou 'warning' au lieu de 'debug'

# ─── Session (désactivé - API only) ────────────────────────
SESSION_DRIVER=array
SESSION_LIFETIME=120

# ─── Broadcasting (Reverb WebSocket) ───────────────────────
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=roomshare
REVERB_APP_KEY=roomshare-key
REVERB_APP_SECRET=roomshare-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# ─── Cache & Queue ─────────────────────────────────────────
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
CACHE_STORE=file

# ─── Frontend & API URLs (pour CORS) ───────────────────────
# ⚠️ IMPORTANT : Remplacer par les URLs réelles en production
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost

# ─── Mail Configuration ────────────────────────────────────
# Pour développement local : utiliser Mailtrap ou MailHog
# Pour production : utiliser SMTP (Gmail, SendGrid, Mailgun, etc.)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@roomshare.app
MAIL_FROM_NAME="${APP_NAME}"

# ─── Stripe (Paiements Pass / Boost / Pro) ─────────────────
STRIPE_KEY=pk_test_xxx
STRIPE_SECRET=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
